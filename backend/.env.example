# Node Environment
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Database
MONGO_URI=mongodb://localhost:27017/chainweave-ai

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# ZetaChain Configuration
ZETA_RPC_URL=https://zetachain-evm.blockpi.network/v1/rpc/public
PRIVATE_KEY=your-private-key-here

# Smart Contract Addresses
CHAINWEAVE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
CROSSCHAIN_MINTER_CONTRACT_ADDRESS=0x0987654321098765432109876543210987654321

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Pinata IPFS Configuration
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
PINATA_JWT=your-pinata-jwt-token

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Admin Wallet Addresses (comma-separated)
ADMIN_WALLETS=0xYourAdminWallet1,0xYourAdminWallet2

# File Upload Settings
MAX_FILE_SIZE=10485760