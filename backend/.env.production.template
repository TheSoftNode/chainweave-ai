# ChainWeave AI Backend - Production Environment Configuration
# Copy this to .env.production and update with your production values

# Application Environment
NODE_ENV=production
PORT=8080

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://your-user:your-password@your-cluster.mongodb.net/chainweave?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-min-32-chars
JWT_EXPIRES_IN=7d

# API Keys
GEMINI_API_KEY=your-production-gemini-api-key
OPENAI_API_KEY=your-production-openai-api-key

# IPFS/Pinata Configuration
PINATA_API_KEY=your-production-pinata-api-key
PINATA_SECRET_API_KEY=your-production-pinata-secret-key
PINATA_JWT=your-production-pinata-jwt-token

# ZetaChain Configuration
ZETACHAIN_RPC_URL=https://zetachain-mainnet.g.allthatnode.com/v1/zetachain/archive/evm
ZETACHAIN_CHAIN_ID=7000
ZETACHAIN_TESTNET_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public
ZETACHAIN_TESTNET_CHAIN_ID=7001

# Smart Contract Addresses (Update with mainnet addresses)
CONTRACT_ADDRESS=0xYourMainnetContractAddress
CROSS_CHAIN_MINTER_ETH=0xYourEthereumMinterAddress
CROSS_CHAIN_MINTER_BSC=0xYourBSCMinterAddress
CROSS_CHAIN_MINTER_POLYGON=0xYourPolygonMinterAddress

# Admin Configuration
ADMIN_WALLET_1=0xYourMainAdminWalletAddress
ADMIN_WALLET_2=0xYourSecondaryAdminWalletAddress

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com,https://chainweave.ai

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
